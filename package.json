{
  "name": "@gmanavarro/create-express-app",
  "version": "0.0.1",
  "description": "Create Express App - CLI application to initialize template Express applications with default development configuration.",
  "main": "main.js",
  "scripts": {
    "build": "rimraf dist && tsc",
    "start": "tsc && node dist/main.js",
    "start:dev": "nodemon --legacy-watch \"./src/main.ts\" --exec \"npx ts-node src/main.ts\"",
    "publish:npm": "npm run build && npm publish --access public",
    "test": "test"
  },
  "keywords": [
    "nodejs",
    "express",
    "cli"
  ],
  "author": "Germ√°n Navarro",
  "license": "ISC",
  "dependencies": {
    "async": "^3.2.1",
    "chalk": "^4.1.2",
    "inquirer": "^8.1.2",
    "ora": "^5.4.1",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "@types/async": "^3.2.7",
    "@types/inquirer": "^7.3.3",
    "@types/rimraf": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "jest": "^27.1.0",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "test",
    "testRegex": ".*\\.test\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
